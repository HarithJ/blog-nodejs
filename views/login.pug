extends layout

block content
  if alertMsg
    .row.mt-3
      .col-12
        .alert.alert-danger.alert-dismissible.fade.show.text-center(role='alert')= alertMsg
           button.close(type='button', data-dismiss='alert', aria-label='Close')
            span(aria-hidden='true') Ã—

  .row.mt-5
    .col-6.mx-auto.p-5.shadow.bg-white.rounded
      h3.mb-3 Log In

      form.needs-validation.mt-2(action='/auth/login', method='post', novalidate)
        .form-group
          label(for='username') Username
          input#username.form-control(type='text', name='username', required)
          .invalid-feedback Please don't leave it blank

        .form-group
          label(for='password') Password
          input#password.form-control(type='password', name='password', required)
          .invalid-feedback Please don't leave it blank
        button.btn.btn-primary.mt-2.w-100(type='submit') Log in

      p.mt-4.text-center Don't have an account?
        a(href='/auth/register')  Create Account

block scripts
    script(src='/javascripts/formValidation.js')
